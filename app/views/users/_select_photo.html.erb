<div id="photoSelectorWrapper" class="grey_well">
	
	<div class="row">
		<div class="col6">
			<p>Select your profile photo</p>
		</div>
	</div>

	<%= form_for(@user) do |f| %>
		<div class="row">
			<div class="col2 pull_left">
				<div class="row">
					<%= image_tag "80x80_placeholder.png", id: "SPS" %>
				</div>
				<div class="row">
					<p>Slinggit</p>
				</div>
			</div>

			<div class="col2 pull_left">
				<div class="row">
					<%= image_tag @user.primary_twitter_account.image_url, id: "TPS" %>
				</div>
				<div class="row">
					<p>Twitter</p>
				</div>
			</div>

			<div class="col2 pull_left">
				<div class="row">
					<%= gravatar_for @user %>
				</div>
				<div class="row">
					<p>Gravatar</p>
				</div>
			</div>
		</div>
		<%= f.hidden_field :photo_source %>
	<% end %>
</div>
<script type="text/javascript">
	$(document).ready(function(){
		window.initPhotoSelector("<%= @user.id %>")
	})
</script>