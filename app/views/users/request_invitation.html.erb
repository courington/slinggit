<%= provide(:title, 'Request Invitation') %>

<section class="wrapper invite_wrapper">
	
	<article class="row">
		<%= image_tag "logos/slinggit_logotype_blue_417x162.png", width: "100%", height: "auto", title: "Slinggit Logo blue", alt: "Slinggit Logo", class: "col2 offset1 pull_left" %>
		<p class="col2 pull_left">Slinggit is a fast and carefree way to connect with buyers and sellers in your Twitter and Facebook networks.</p>
	</article>


<div class="col4 offset1">
  <%= form_tag do |f| %>
      <div class="row grey_well">

					<p class="col6">We&rsquo;re getting ready to launch. Be one of the first to start slingging!</p>
          <%= label_tag :email, "Email:", for: "invitation_email", class: "col1 pull_left" %>
					<div class="col4 pull_left">
          	<%= email_field_tag :email, @email, placeholder: "Email", class: "row", size: "30" %>
					</div>


					<div class="row">
	        	<%= button_tag "Request Invitation", class: "btn btn_green col2 offset3", :type => 'submit' %>
					</div>

      </div>
  <% end %>

	<div class="row invite_footer">
		
		<div class="col3 pull_left">
			<%= link_to(about_path, :class => "row") do %>
				<span class="coloradoIcon"></span>
				<span>Handbuilt at 5280'</span>
			<% end %>
			
			<small class="row">&copy;2012 Slinggit</small>
		</div>
		
		<nav class="col3 pull_right">
			<ul class="row">
			<li><a href="http://twitter.com/#!/slinggit" title="Twitter" class="pull_right btnNavSprite twitIcon" >Twitter</a></li>
			<li><a href="https://www.facebook.com/Slinggit" title="Facebook" class="pull_right btnNavSprite facebookIcon">Facebook</a></li>
			</ul>
		</nav>
	</div>
	
	</div>

</section>
