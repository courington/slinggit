<% provide(:title, @user.name) %>
<section class="wrapper">	

  <div class="col4 pull_left">

    <div class="row">
      <div class="col3 pull_left">
        <header>
          <h1>Posts (<%= @posts.count %>)</h1>
          <p>Posts (<%= @posts.count %>)</p>
        </header>
      </div>
      <div class="col3 pull_right">
        <% if current_user?(@user) %>
          <% if not current_user.is_suspended? %>
            <div class="form-actions">
              <%= link_to "Create New Post", new_post_path, class: "btn_green" %>
            </div>
          <% end %>  
        <% end %>
      </div>
    </div>

    <% if @user.posts.any? %>
      
      <%= will_paginate @posts%>
      <ul class="posts">
        <%= render @posts %>
      </ul>
      <%= will_paginate @posts%>
    <% end %>

  </div>

  <div class="col2 pull_right">

    <div class="row">
      <header>
        <h1><%= @user.name %></h1>
      </header>
      <%= gravatar_for @user %>
    </div>
    
    <% if is_signed_in_and_admin? && !current_user?(@user) %>
      <div class="row">
      <!-- ADMIN ONLY FUNCTIONALITY -->

        <%if !@user.is_considered_deleted? %>
          <%= link_to "Ban This User", {:controller => :admin, :action => :set_user_status, :id => @user.id, :status => "BAN"}, confirm: "Ban: You sure?" %>
        <% end %>  

        <%if !@user.is_suspended? %>
          <%= link_to "Suspend This User", {:controller => :admin, :action => :set_user_status, :id => @user.id, :status => "SUS"}, confirm: "Suspend: You sure?" %>
        <% end %>  

      </div>
    <% end %> 

  </div>

</section>

