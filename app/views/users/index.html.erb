<%= provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user %>
      <%= link_to user.name, user %>
      <% if current_user.admin? && !current_user?(user) && user.status != "deleted" %>
      |  <%= link_to "delete", user, method: :delete, confirm: "You sure?" %>
      <% elsif current_user.admin? && !current_user?(user) && user.status == "deleted" %>
      	<strong>It looks like we have deleted this user.</strong>
      	<%= link_to "renable", {:controller => :users, :action => :renable, :id => user.id}, confirm: "You sure?" %>
  	  <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>