<footer class="pageFoot">
	<div class="wrapper">
		
		<nav class="row">

			<ul class="col4 pull_left">
				<li class="pull_left"><%= link_to "About", about_path %></li>
				<li class="pull_left"><%= link_to "Help", help_path %></li>
				<li class="pull_left"><%= link_to "Contact", contact_path %></li>
				<!-- <li class="pull_left <%= 'active' if current_page?(sessions_path) %>"><%= link_to "Sessions", sessions_path %></li> -->
