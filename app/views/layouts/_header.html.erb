<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <h3>
        <%= link_to "slinggit", root_path, id: "logo" %>
      </h3>
      <nav class="nav-collapse">
        <ul class="nav pull-right">
          <li class="<%= 'active' if current_page?(root_path) %>">
            <%= link_to "Home", root_path %>
          </li>
          <% if signed_in? %>
              <% if current_user.admin? %>
                  <li class="<%= 'active' if current_page?(users_path) %>">
                    <%= link_to "Users", users_path %>
                  </li>
              <% end %>
              <li id="fat-menu" class="dropdown <%= 'active' if current_page?(current_user) || current_page?(edit_user_path(current_user)) %>">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Account <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li class="<%= 'active' if current_page?(current_user) %>">
                    <%= link_to "Posts", current_user %>
                  </li>
                  <li class="<%= 'active' if current_page?(edit_user_path(current_user)) %>">
                    <%= link_to "Profile", edit_user_path(current_user) %>
                  </li>
                  <li class="<%= 'active' if current_page?(networks_path) %>">
                    <%= link_to "Twitter Accounts", networks_path %>
                  </li>
                  <li class="<%= 'active' if current_page?(sessions_path) %>">
                    <%= link_to "Mobile Sessions", sessions_path %>
                  </li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Sign out", signout_path, method: "delete" %>
                  </li>
                </ul>
              </li>
          <% else %>
              <li class="<%= 'active' if current_page?(signin_path) %>">
                <%= link_to "Sign in", signin_path %>
              </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
