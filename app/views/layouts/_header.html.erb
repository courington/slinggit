<header>
	<section class="wrapper">
		<div class="logo">
			<h1>Slinggit</h1>
			<%= link_to image_tag("images/logos/slinggit_logo_grey_290x97.png", :width=>"100%", :height=>"auto", :title=>"Slinggit Logo Grey", :alt=>"Slinggit Logo" ), :action => 'home', :controller => 'static_pages' %>
			<small>beta</small>
		</div>
		<nav>
			<ul>
		  	<li class="<%= 'active' if current_page?(root_path) %>"><%= link_to "Home", root_path %></li>
		  	<% if signed_in? %>
		      	<% if current_user.admin? %>
		          <li class="<%= 'active' if current_page?(users_path) %>"><%= link_to "Users", users_path %></li>
		      	<% end %>
		  		<% else %>
		      <li class="<%= 'active' if current_page?(signin_path) %>"><%= link_to "Sign in", signin_path %></li>
		  		<% end %>
		  	<li><%= text_field_tag :quickSearch, nil, :placeholder => 'Quick Search', :name => 'quickSearch', :size => 'auto' %></li>
			</ul>
		</nav>
	</section>
</header>

<script type="text/javascript">

    $(document).ready(function () {
        $('#quickSearch').keypress(function (e) {
            if (e.which == 13) {
                e.preventDefault();
                document.location.href = "/posts/results/" + $('#quickSearch').val();
            }
        });
    });

</script>