
<h1>All users</h1>

<%= will_paginate @users%>

<section>
  <table class="admin_table table_bordered table-striped">
    <thead>
      <tr>
        <th></th>
        <th>Username</th>
        <th>Posts</th>
        <th>Comments</th>
        <th>Messages</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.profile_photo_url, style: "width: 40px" %></td>
          <td><%= link_to user.name, {:controller => :admin, :action => :view_user, :id => user.id} %></td>
          <td>Posts</td>
          <td>Comments</td>
          <td>Messages</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

<%= will_paginate @users%>