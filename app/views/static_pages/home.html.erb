<% provide(:title, 'Home') %>
<section class="wrapper">
	
	<div class="page_col twoCol">
  	<h1>slinggit</h1>
  		<% if current_user.blank? %>
      	<%= link_to "Sign up now!", signup_path, class: "btn_large" %>
  		<% elsif not current_user.blank? %>
      <p>Welcome back <%= current_user.name %>!</p>
      <p>Got some old junk laying
        around?  <%= link_to "Slinggit", new_post_path, class: "btn_large" %></p>
  			<% end %>
	</div>

<div class="page_col twoCol">
<script charset="utf-8" src="http://widgets.twimg.com/j/2/widget.js"></script>
<script>
    $(document).ready(function () {
        <% if signed_in? and not @primary_twitter_account.blank?  %>
        $('#twtr-widget-1').css('float', 'left');
        $('#twtr-widget-2').css('float', 'right');
        $('.footer').css('padding-top', '355px');
        <% else %>
        $('#twtr-widget-1').css('padding-left', '0');
        $('.footer').css('padding-left', '0');
        <% end %>

    });

    new TWTR.Widget({
        version:2,
        type:'profile',
        rpp:20,
        interval:300,
        width:'auto',
        height:'550',
        theme:{
            shell:{
//cc: BG is set to $wht
                background:'rgb(248, 248, 248)',
//cc: text-color is set to $main-grey
                color:'rgb(119, 119, 119)'
            },
            tweets:{
                background:'rgb(248, 248, 248)',
                color:'rgb(119, 119, 119)',
                links:'rgb(119, 119, 119)'
            }
        },
        features:{
            scrollbar:true,
            loop:true,
            live:true,
            behavior:'all'
        }
    }).render().setUser('gitnsling_test').start();
    <% if signed_in? and not @primary_twitter_account.blank? %>
    new TWTR.Widget({
        version:2,
        type:'profile',
        rpp:20,
        interval:300,
        width:'auto',
        height:'auto',
        theme:{
            shell:{
                background:'#333333',
                color:'#ffffff'
            },
            tweets:{
                background:'#000000',
                color:'#ffffff',
                links:'#4aed05'
            }
        },
        features:{
            scrollbar:true,
            loop:true,
            live:true,
            behavior:'all'
        }
    }).render().setUser('<%= @primary_twitter_account.user_name%>').start();
    <% end %>
</script>
</div>
</section>
