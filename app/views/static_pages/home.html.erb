<% provide(:title, 'Home') %>
<section class="wrapper">
    <% if !@posts.blank? %>
        <div class="row grey_well wrapper_twitRoll">
            <div class="col6"><%= render @posts %></div>
        </div>
    <% end %>
	<div class="row">
  		<div class="col6">

    		<% if current_user.blank? %>
			<div class="row white_well">
        		<p class="row">Looking for something? Want to sell something? Slinggit.</p>

				<!-- wrap the greeting/button in a row -->
				<div class="row">
        			<% if invite_only? %>
            			<%= link_to "Request Invitation", {:controller => :users, :action => :request_invitation}, class: "col2 offset2 btn_darkGrey" %>
        			<% else %>
            			<%= link_to "Sign up now!", signup_path, class: " col2 offset2 btn_blue" %>
        			<% end %>
				</div>
				<!-- end row -->
			</div>	
    			<% elsif not current_user.blank? %>
			<div class="row">
				<div class="col4 pull_left white_well">
        			<p class="row">Welcome back <%= current_user.name %>!</p>
        			<p class="row">Got some old junk laying around?</p>
					<div class="row">
						<%= link_to "Slinggit", new_post_path, class: "col2 offset1 pull_left btn_green" %>
					</div>
				</div>
				<div class="col2 pull_right grey_well">
					<p>this is the modal</p>
				</div>
			</div>
    		<% end %>
		</div>
  	</div>

