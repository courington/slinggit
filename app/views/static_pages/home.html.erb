<% provide(:title, 'Home') %>
<section class="wrapper homepage">

<!-- if/else for user sign-in/sign-up homepage states -->
	<div class="row">
		
		<!-- <div class="col1 pull_left">
			<%= image_tag "heroimages/slinggit_icons_326x634.png", width: "100%", height: "auto", title: "Slinggit icons", alt: "Icons representing Slinggit brand", id: "home_slinggitIcons" %>
		</div> -->
  		
		<div class="col6">
			
<!-- if user is not signed in -->
      <% if current_user.blank? %>
			<section class="homeNotSignedIn">
				<div class="col4 pull_left white_well">
					<header class="row">
						<h1 class="headline bottom_border">Welcome to Slinggit.</h2>
						<h2>The fastest way to connect with your social networks to git the things you want and sling the things you don&rsquo;t.</h2>
					</header>
					<div class="row">
						<div class="col4 offset1">
						<% if invite_only? %>
							<!-- if invites are active -->
							<%= link_to "Request Invitation", {:controller => :users, :action => :request_invitation}, class: "col4 offset1 btn_darkGrey" %>
						<% else %>
							<!-- if invites are NOT active -->
							<%= link_to "Sign up now!", signup_path, class: "col4 offset1 btn_green" %>
						<% end %>
						</div>
					</div>
				</div>
				<section class="col2 pull_right homeBuckets sidebar">
					<article class="row grey_well">
						<h1 class="headline">How it works</h1>
						<p>Post an item for sale on Facebook or search for an item to buy on Twitter from your mobile device or desktop.</p>
					</article>
					<article class="row grey_well">
						<h1 class="headline">Selling</h1>
						<p>Quickly sling items to your friends and followers or use the Slinggit networks for greater reach. We don&rsquo;t take a cut of your sale.</p>
					</article>
					<article class="row grey_well">
						<h1 class="headline">Buying</h1>
						<p>Find what you want to git in your network or city feed. Ask questions and make offers without giving out your personal email.</p>
					</article>
				</section>
			</section>
<!-- end user not signed in if/else -->
	

<!-- if user is signed in -->
	<% elsif not current_user.blank? %>
	<div class="row homeSignedIn">
<!-- USER INFO PARTIAL RENDERS AS .col2 -->
		<%= render 'shared/user_info' %>
		<div class="col4 pull_left white_well">
			<div class="row">
				<h2 class="headline">Welcome back <%= current_user.name %>!</h2>
				<!-- <p class="pull_left headline"> Have something to Sling?</p> -->
			</div>
			<div class="row">
				<%= link_to "Create New Post", new_post_path, class: "col3 btn_green" %>
				<%= link_to "View My Posts", current_user, class: "col2 pull_right btn_ltGrey" %>
			</div>
			<div class="row">
				<%= link_to signout_path, method: "delete", class: "pull_right" do %>
					<span>Not <%= current_user.name %>?</span> Sign Out.
				<% end %>
			</div>
		</div>
	</div>
<!-- end the user is signed in if/else -->
	<% end %>
	
<!-- show latest slinggit post -->
	    <% if !@posts.blank? %>
	        <article class="col4 pull_left home_featurePost">
	            <div  id="featuredPosts" class="white_well row">
					<h1 class="row">Recent Items:</h1>
					<%= render @posts %>
				</div>
	        </article>
	    <% end %>
<!-- end -->

<!-- end the homepage sign-in/sign-up if/else -->
		</div> <!-- close col6 -->
	</div> <!-- close row -->
</section>