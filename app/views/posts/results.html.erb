<% provide(:title, "Post Search") %>
<section id="searchPostWrapper" class="wrapper"> 

  <div class="col2 pull_right">

  </div>

  <div id="postSearchResults" class="col4 pull_left">
    
    <div class="row title_row">
      <div class="col3 pull_left">
        <header>
          <h1>Search Results</h1>
        </header>
      </div>
    </div>

    <div id="postArticlesWrapper">
      <% if not @posts.blank? %>
        <%= render @posts %>
      <% else %>
        <div class="row">
          <p>No posts were found for <strong><%= @searchTerm %></strong></p>
        </div>
      <% end %>
  </div>

  </div>

</section>


