<div class="thumbnail col_oneThird">
    <% if @post.photo_file_name.blank? %>
      <%= image_tag "300x300_placeholder.png" %>
    <% else %>
      <%= image_tag @post.photo.url(:medium) %>
    <% end %>
</div>

<%= form_for(@post) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
	<fieldset>
        <%= f.label :hashtag_prefix, "Your item", class: "", for: "post_hashtag_prefix" %>
          <div class="input-append">
            <%= f.text_field :hashtag_prefix, class: "hardEdge-right form-singleLine", placeholder: "#", maxLength: "10" %>
            <span class="add-on">forsale</span>
          </div>
      </fieldset>

	<fieldset>
        <%= f.label :content, "Quick description", class: "", for: "post_content" %>
        <%= f.text_area :content, class: "form-singleLine", rows: "3", placeholder: "Something short and sweet..." %>
      </fieldset>

		<fieldset>
      <%= f.label :price, class: "", for: "post_price" %>
        <div class="input-append">
          <%= f.text_field :price, class: "hardEdge-right form-singleLine", id: "post_price", placeholder: "$", maxLength: "5" %>
          <span class="add-on hardEdge-left">.00</span>
        </div>
	    </fieldset>
    <%= f.submit "Update Post", class: "btn" %>
<% end %>

<!-- Chase, this has to live outside of the other form or this page, however
