<!-- Reply to container -->
<div class="row contentHeader">
  <div class="innerHeader">
    <h2>Reply to Seller</h2>
  </div>  
</div> 
<div class="row">
  <% if not @twitter_post.blank? %>
    <p>Reply directly to
      <a href="https://twitter.com/#!/<%= @api_account.user_name %>/status/<%= @twitter_post.twitter_post_id %>" target="_blank">@<%= @api_account.user_name %></a>
    via Twitter</p>  
  <% end %>  
</div>
<div class="row">
  <% if not signed_in? %>

    <div class="col6">
      <div class="row">
        Placeholder stuff.  Going to put form here.
      </div>  
      <div class="row">
        <h4 class="alert-heading"><%= link_to "Sign in", signin_path %> to reply to this post</h4>
      </div>
      <div class="row">
        <p>New to slinggit? <%= link_to "Sign up now!", signup_path %></p>
      </div>
    </div>
  <% end %>
</div>  

<div class="row">
  
    <% if current_user?(@user) %>
      <% if current_user.status != "suspended"%>
        <h6 class="pull-right"><%= link_to "edit", edit_post_path(@post), class: "btn" %></h6>
      <% end %> 
    <% end %>

</div>
