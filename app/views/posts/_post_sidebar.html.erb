<!-- Reply to container -->
<div id="postReply">
  <div class="row contentHeader">
    <div class="col5 innerHeader">
      <p>Reply to <strong><%= @user.name %></strong></p>
    </div>  
  </div> 

  <div id="postReplyActions" class="row">
    <% if not @twitter_post.blank? %>
      <div class="row">
        <div class="col1">
          <p>twitter</p>
        </div>
        <div class="col5">
          <%= link_to "Twitter", "https://twitter.com/#!/#{@api_account.user_name}/status/#{@twitter_post.twitter_post_id}", class: "col6 btn_twitter" %>
        </div>
      </div>
    <% end %> 
    
    <div class="row">
      <div class="col1">
        <p>slinggit</p>
      </div>
      <div class="col5">
          <%= link_to "slinggit", {:controller => :messages, :action => :new, :id => @post.id_hash}, class: "col6 btn_green" %>
      </div> 

    </div>
  </div>

  <div class="row">
    
      <% if current_user?(@user) %>
        <% if current_user.status != "suspended"%>
          <%= link_to "CLOSE", edit_post_path(@post), class: "btn_darkGrey" %>
        <% end %> 
      <% end %>

  </div>
</div>