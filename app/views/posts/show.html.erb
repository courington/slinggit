<% provide(:title, @post.hashtag_prefix) %>
<section id="post" class="wrapper">

	<div id="postContent" class="row">
		<div class="col6">

			<div class="row contentHeader">
				<div class="innerHeader">
					<header class="row">
						<h1><%= @post.hashtag_prefix %></h1>
						<p><%= @post.hashtag_prefix %></p>	  		
					</header>
				</div>	
			</div>	

			<div class="row">
				<div id="postDetails" class="col4 pull_left <%=@post.open_class%>">

					<div class="row">
						<div class="col3 pull_right">
							<% if @post.photo_file_name.blank? %>
								<%= image_tag "300x300_placeholder.png", :class => "img_border", :height => "auto", :width => "100%" %>
							<% else %>
								<%= image_tag @post.photo.url(:medium), :class => "img_border", :height => "auto", :width => "100%" %>
							<% end %>
						</div>

						<div id="postInfo" class="col3 pull_left">
							<dl>
							    <dt class="col2">Location</dt>
							    <dd class="col3"><%= @post.location %></dd>
							    <dt class="col2">Price</dt>
							    <dd class="col3">$<%= @post.price %></dd>
							    <dt class="col2">Interested</dt>
							    <dd class="col3"><%= @post.comments.count('user_id', :distinct => true) %></dd>
							    <dt class="col2">Status</dt>
							    <dd id="postStatus" class="col3 <%=@post.open?%>">
							      <% if @post.open? %>
							        Open
							      <% else %>  
							        Closed
							      <% end %>
							    </dd>
							</dl>
						</div>
						<div id="postDescription" class="col3">
							<p class="col6"><%= @post.content %></p>
						</div>	
					</div>

				</div>
				<% if @post.open? %>
					<div id="postReplyWrapper" class="col2 pull_right">
						<%= render 'posts/post_sidebar' %>
					</div>
				<% else %>
					<div id="closedPostWrapper" class="col2 pull_right">
						<%= render 'posts/post_closed_sidebar' %>
					</div>
				<% end %>
			</div>

		</div> <!-- -->
	</div>

	<div id="comments" class="row">
		<div class="col4 pull_left <%=@post.open_class%>">
			<div id ="commentContent" class="row">
				<div class="col6"> 
					<% if @comments.any? %>
						<h3>Questions to <strong><%= @user.name %></strong></h3>
						<%= render @comments %>
						<%= will_paginate @comments %>
					<% else %>
						<%= render 'posts/post_no_comments' %>
					<% end %>  
				</div>
			</div>
			<% if signed_in? %>
				<div id="commentInput" class="row">	
					<div class="col6"> 
					<%= render 'posts/post_comment_form' %>
					</div>
				</div>
			<% else %>
				<div id="signUpWrapper" class="row">	
					<div class="col6">
						<%= render 'posts/post_comments_signup' %>
					</div>
				</div>
			<% end %>
			
		</div>
	</div>

		
	<% if is_signed_in_and_admin? %>
		<!-- ADMIN ONLY FUNCTIONALITY -->
		<div class="row adminActions">
			<%= link_to "DELETE", @post, method: :delete, confirm: "You sure?" %>
		 </div> 
	<% end %>		

</section>