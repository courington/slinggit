<% provide(:title, @post.content) %>
<div class="row">

  <div class="span8 offset2 well-white">

    <div class="row">
      <div class="span8">

        <div class="row">

          <h2><%= @post.hashtag_prefix %></h2> 
          <hr>

        </div> <!-- row 1 end --> 

        <div class="row">

          <div class="span4"> 
            <div class="thumbnail">
              <% if @post.photo_file_name.blank? %>
                <%= image_tag "http://placehold.it/300x300" %>
              <% else %>
                <%= image_tag @post.photo.url(:medium) %>
              <% end %>
            </div>
          </div>

          <div class="span4"> 

            <%= render 'posts/post_sidebar' %>

          </div>

        </div> <!-- row 2 end --> 

        <br>

        <div class="row">
        <% if signed_in? %>

          <% if @post.open? %>

            <%= form_for([@post, @post.comments.build]) do |f| %>
              <%= f.hidden_field :user_id, value: current_user.id %>

              <fieldset>
                <div class="control group">
                  <div class="controls">
                    <%= f.text_area :body, class: "input-xlarge", rows: "3", style: "width:100%" %> <!-- inline style! -->
                  </div>  
                </div>

                <div class="form-actions">
                  <%= f.submit "Reply to Post", class: "btn btn-inverse" %>
                </div>

              </fieldset>

              <% end %><!-- form end -->

          <% else %>

              <div class="alert alert-error">
                <h4 class="alert-heading">Post Closed</h4>
                Oh snap, it appears this item is no longer for sale.
              </div>

          <% end %>  

        <% else %>
          <div class="alert alert-info-black">
            <a class="close" data-dismiss="alert" href="#">Ã—</a>
            <h4 class="alert-heading"><%= link_to "Sign in", signin_path %> to reply to this post</h4>
            <p>New to slinggit? <%= link_to "Sign up now!", signup_path %>. Or you can always reply to [primary_handle] via Twitter</p>
          </div>
        <% end %>
        </div> <!-- row 3 end --> 

        <div class="row">
          <% if @comments.any? %>
            <ol class="comments">
              <%= render @comments %>
            </ol>
            <%= will_paginate @comments %>
          <% end %>  
        </div> <!-- row 4 end --> 

      </div><!-- span end --> 
    </div><!-- row end --> 
 

  </div><!-- span8 offset2 end -->

</div><!-- row end --> 