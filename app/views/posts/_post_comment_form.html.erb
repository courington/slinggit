<% if signed_in? %>

  <% if @post.open? %>

    <% if current_user.status != "suspended" %>

      <%= form_for([@post, @post.comments.build]) do |f| %>
        <%= f.hidden_field :user_id, value: current_user.id %>

        <fieldset>
          <div class="control group">
            <div class="controls">
              <%= f.text_area :body, class: "input-xlarge", rows: "3", style: "width:100%" %> <!-- inline style! -->
            </div>  
          </div>

          <div class="form-actions">
            <%= f.submit "Reply to Post", class: "btn btn-inverse" %>
          </div>

        </fieldset>

        <% end %><!-- form end -->

    <% else %>

      <div class="notice">
        You are currently in time out.  As a result of this, you cannot comment on posts.
      </div>  

    <% end %>    

  <% else %>

      <div class="alert alert-error">
        <h4 class="alert-heading">Post Closed</h4>
        Oh snap, it appears this item is no longer for sale.
      </div>

  <% end %>  

<% else %>
  <div class="alert alert-info-black">
    <a class="close" data-dismiss="alert" href="#">Ã—</a>
    <h4 class="alert-heading"><%= link_to "Sign in", signin_path %> to reply to this post</h4>
    <p>New to slinggit? <%= link_to "Sign up now!", signup_path %>. Or you can always reply to [primary_handle] via Twitter</p>
  </div>
<% end %>