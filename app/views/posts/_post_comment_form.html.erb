<% if @post.open? %>

  <% if not current_user.is_suspended? %>

    <%= form_for([@post, @post.comments.build]) do |f| %>
      <%= f.hidden_field :user_id, value: current_user.id %>

      <fieldset>
        <div class="control group row">
          <div class="controls">
            <%= f.text_area :body, rows: "3" %> <!-- inline style! -->
          </div>  
        </div>

        <div class="form-actions row">
          <%= f.submit "Ask Question", class: "col2 btn" %>
        </div>

      </fieldset>

      <% end %><!-- form end -->

  <% else %>

    <div id="notice_explanation" class="notice">
      You are currently in time out.  As a result of this, you cannot comment on posts.
    </div>  

  <% end %>    

<% end %>  