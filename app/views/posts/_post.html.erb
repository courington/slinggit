<li class="row">
  <div class="row">
		<div class="col2 pull_left">
		<%= link_to(post_path(post)) do %>
        	<div class="photo">
          	<% if post.photo_file_name.blank? %>
            	<%= image_tag "300x300_placeholder.png", :height => "auto", :width => "100%" %>
          	<% else %>
            	<%= image_tag post.photo.url(:medium) %>
          	<% end %>
        	</div>
    <% end %>
		</div>
    
		<div class="col4 pull_left">
			<h2 class="item"><%= post.hashtag_prefix %></h2>
			<p><%= post.content %></p>
			<small class="timestamp">Posted <%= time_ago_in_words(post.created_at) %> ago.</small>
			<small class="timestamp">Updated <%= time_ago_in_words(post.updated_at) %> ago.</small>
		</div>
	</div>

	<div class="row">
      <div class="col4 pull_right">

        <div class="row">
          <% if post.open? %>
            <p class="label label-success">Open</p>
          <% else %>  
            <p class="label label">Closed</p>
          <% end %>  
          <% if current_user?(post.user) %>
            <%= link_to "edit", edit_post_path(post) %>
          <% end %>
        </div>

        <div class="row adminActions">
          <% if is_signed_in_and_admin? && !current_user?(@user)%>
            <!-- ADMIN ONLY FUNCTIONALITY -->
            <div class="row">
              <%= link_to "DELETE POST and SUSPEND USER", {:controller => :admin, :action => :set_post_status, :id => post.id, :status => "DEL", :user_status => "SUS"}, confirm: "Delete Post: You sure?" %>
            </div>
            <div class="row">
              <%= link_to "DELETE POST and BAN USER", {:controller => :admin, :action => :set_post_status, :id => post.id, :status => "DEL", :user_status => "BAN"}, confirm: "Delete Post: You sure?" %>
            </div>  
          <% end %>
        </div>  

      </div>
    </div>
</li>