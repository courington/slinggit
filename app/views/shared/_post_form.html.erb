<article class="col4">
<%= form_for @post do |f| %>

      <fieldset class="row">
        <%= f.label :hashtag_prefix, "Your item", class: "col3", for: "post_hashtag_prefix" %>
          <div class="input-append">
            <%= f.text_field :hashtag_prefix, class: "hardEdge-right form_singleLine", placeholder: "#", maxLength: "10" %>
            <span class="add-on">forsale</span>
          </div>
      </fieldset>

<div class="row">
	    <fieldset class="col2 pull_left">
        <%= f.label :price, class: "col3", for: "post_price" %>
          <div class="input-append">
            <%= f.text_field :price, class: "hardEdge-right form_singleLine", id: "post_price", placeholder: "$", maxLength: "5" %>
            <span class="add-on hardEdge-left">.00</span>
          </div>
	    </fieldset>

      <fieldset class="col4 pull_left">
        <%= f.label :location, "Location", class: "col3", for: "post_hashtag_prefix" %>
        <%= f.text_field :location, class: "form_singleLine", placeholder: "City, State, or Zip", maxLength: "16" %>
      </fieldset>
</div>

      <fieldset class="row">
        <%= f.label :content, "Quick description", class: "col3", for: "post_content" %>
        <%= f.text_area :content, class: "col6 form_singleLine", rows: "3", placeholder: "more #hashtags, a succinct description, maybe @someone to sling at" %>
      </fieldset>

<div class="row">
      <fieldset id="photoControlGroup" class="col3">
        <%= f.label :photo, "Item Photo (optional)", class: "", for: "post_photo" %>
        <div class="controls thumbnail">
          <%= f.file_field :photo, style: "position:absolute; top:-999px; left:-999px" %>
          <a href="#" id="fileSelect">Select a photo</a>
        </div>
      </fieldset>

      <fieldset class="col3">
        <span>Twitter account(s) to post to:</span>
        <%= check_box_tag "twitter_accounts[#{@slinggit_account_id}]", 'post', true %>Slinggit
        <% @twitter_accounts.each do |twitter_account| %>
            <%= check_box_tag "twitter_accounts[#{twitter_account.id}]", 'post', true %> <%= twitter_account.user_name %>
        <% end %>
	  </fieldset>
	</div>
<%= render 'shared/error_messages', object: f.object %>

		<fieldset class="row">
        	<% if @cant_post %>
          	<div>You have reached your 24 hours post limit.  Please contact customer service if you wish to increase this limit.</div>
            <%= f.button "Post Item", type: "submit", class: "btn_medium", id: "submitNewPost", disabled: "disabled" %>
        	<% else %>
            <%= f.button "Post Item", type: "submit", class: "btn_medium", id: "submitNewPost" %>
        	<% end %>
		</fieldset>
<% end %>
</article>