<style type="text/css">
    img.obj {
        width: 300px;
    }

</style>

<%= form_for @post do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
	<header>  	
	<h1>Create a post:</h1>
	<p>Create a post:</p>
	</header>

      <fieldset>
        <%= f.label :hashtag_prefix, "Your item", class: "control-label", for: "post_hashtag_prefix" %>
          <div class="input-append">
            <%= f.text_field :hashtag_prefix, class: "hardEdge-right form-singleLine", placeholder: "#" %>
            <span class="add-on">forsale</span>
          </div>
      </fieldset>

      <fieldset>
        <%= f.label :location, "Location", class: "", for: "post_hashtag_prefix" %>
        <%= f.text_field :location, class: "form-singleLine", placeholder: "City, State, or Zip" %>
      </fieldset>

      <fieldset class="control-group">
        <%= f.label :content, "Quick description", class: "control-label", for: "post_content" %>
          <%= f.text_area :content, class: "form-singleLine", rows: "3", placeholder: "Something short and sweet..." %>
      </fieldset>

	<fieldset>
        <%= f.label :price, class: "control-label", for: "post_price" %>
          <div class="input-append">
            <%= f.text_field :price, class: "hardEdge-right form-singleLine", id: "post_price" %>
            <span class="add-on hardEdge-left">.00</span>
          </div>
	</fieldset>

      <fieldset id="photoControlGroup" class="control-group">
        <%= f.label :photo, "Item Photo (optional)", class: "control-label", for: "post_photo" %>
        <div class="controls thumbnail">
          <%= f.file_field :photo, style: "position:absolute; top:-999px; left:-999px" %>
          <a href="#" id="fileSelect">Select a photo</a>
        </div>
      </fieldset>

      <fieldset class="form-actions">
        <span>Select Twitter accounts to post on</span><br/>
        <%= check_box_tag "twitter_accounts[0]", 'post', true %> Slinggit<br/>
        <% @twitter_accounts.each do |twitter_account| %>
            <%= check_box_tag "twitter_accounts[#{twitter_account.id}]", 'post', true %> <%= twitter_account.user_name %>
            <br/>
        <% end %>
        
        <% if @cant_post %>
            <div>You have reached your 24 hours post limit.  Please contact customer service if you wish to increase this limit.</div>
            <%= f.submit "Post Item", class: "btn-medium", id: "submitNewPost", disabled: "disabled" %>
        <% else %>
            <%= f.submit "Post Item", class: "btn-medium", id: "submitNewPost" %>
        <% end %>
      </fieldset>

<% end %>
