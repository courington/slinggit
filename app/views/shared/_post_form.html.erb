<style type="text/css">
    img.obj {
        width: 300px;
    }

</style>

<%= form_for @post do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <fieldset>
      <legend>
        Create a new post.
      </legend>
      <div class="clearfix-placeholder"></div>

      <div class="control-group">
        <%= f.label :hashtag_prefix, "Your item", class: "control-label", for: "post_hashtag_prefix" %>
        <div class="controls">
          <div class="input-append">
            <%= f.text_field :hashtag_prefix, class: "input-large", placeholder: "#" %>
            <span class="add-on">forsale</span>
          </div>
        </div>
      </div>

      <fieldset>
        <%= f.label :location, "Location", class: "", for: "post_hashtag_prefix" %>
        <%= f.text_field :location, class: "form_singleLine", placeholder: "City, State, or Zip" %>
      </fieldset>

      <div class="control-group">
        <%= f.label :content, "Quick description", class: "control-label", for: "post_content" %>
        <div class="controls">
          <%= f.text_area :content, class: "input-xlarge", rows: "3", placeholder: "Something short and sweet..." %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :price, class: "control-label", for: "post_price" %>
        <div class="controls">
          <div class="input-append">
            <%= f.text_field :price, class: "input-large" %>
            <span class="add-on">.00</span>
          </div>
        </div>
      </div>

      <div id="photoControlGroup" class="control-group">
        <%= f.label :photo, "Item Photo (optional)", class: "control-label", for: "post_photo" %>
        <div class="controls thumbnail">
          <%= f.file_field :photo, style: "position:absolute; top:-999px; left:-999px" %>
          <a href="#" id="fileSelect">Select a photo</a>
        </div>
      </div>

      <div class="form-actions">
        <span>Select Twitter accounts to post on</span><br/>
        <%= check_box_tag "twitter_accounts[0]", 'post', true %> Slinggit<br/>
        <% @twitter_accounts.each do |twitter_account| %>
            <%= check_box_tag "twitter_accounts[#{twitter_account.id}]", 'post', true %> <%= twitter_account.user_name %>
            <br/>
        <% end %>
        <br/><br/>
        <% if @cant_post %>
            <div>You have reached your 24 hours post limit.  Please contact customer service if you wish to increase this limit.</div>
            <%= f.submit "Post Item", class: "btn btn-medium btn-primary", id: "submitNewPost", disabled: "disabled" %>
        <% else %>
            <%= f.submit "Post Item", class: "btn btn-medium btn-primary", id: "submitNewPost" %>
        <% end %>

      </div>
    </fieldset>
<% end %>
