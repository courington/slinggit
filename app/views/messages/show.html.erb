<% provide(:title, "Messages") %>
	<div class="wrapper message">
	<% if @message %>
	<article class="col4 pull_left grey_well">
		
		<div class="row">
			<small class="col6 timestamp">Received <%= time_ago_in_words(@message.created_at) %> ago.</small>
		</div>

		<dl class="row">
			<dt class="col1 pull_left">From:</dt>
			<dd class="col5 pull_left"><%= @message.contact_info[:email] %></dd>
		</dl>

        <div class="row">
            <p class="col6"><%= @message.body %></p>
        </div>

	</article>

	<aside class="col2 pull_right grey_well">
		<%= link_to "Reply", {:action => :reply, :id => @message.id_hash}, :class => "btn btn_green row" %>
		<%= link_to "Delete", {:action => :delete, :id => @message.id_hash, :method => :delete}, :confirm => 'Are you sure you want to delete this message?', :class => "btn btn_red row" %>
	</aside>

    <% end %>
	</div>
