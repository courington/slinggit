<% provide(:title, "Messages") %>
<div class="wrapper messages">
  <article>
    <% if @message %>
        <div class="row">
          <div class="col6 pull_left">
            <p><%= @message.body %></p>
          </div>
        </div><br/>
        <div class="row">
          <div class="col6 pull_left">
            <p>From: <%= @message.contact_info[:email] %></p>
          </div>
        </div><br/>
        <div class="row">
          <div class="col6 pull_left">
            <small class="timestamp">Received <%= time_ago_in_words(@message.created_at) %> ago.</small>
          </div>
        </div><br/>
        <div class="row">
          <div class="col6 pull_left">
            <%= link_to "Reply", {:action => :reply, :id => @message.id_hash}, :class => "btn btn_green" %>
            <%= link_to "Delete", {:action => :delete, :id => @message.id_hash, :method => :delete}, :confirm => 'Are you sure you want to delete this message?', :class => "btn btn_red" %>
          </div>
        </div>
    <% end %>
  </article>
</div>
