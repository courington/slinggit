<% provide(:title, "Messages") %>
<div class="wrapper message">
  <% if @message %>
      <article class="col4 pull_left white_well">

        <div class="row">
          <small class="col6 timestamp">Received <%= time_ago_in_words(@message.created_at) %> ago.</small>
        </div>

        <div class="row">
          <p class="col1 pull_left title">Item:</p>
          <p class="col2 pull_left"><%= @message.source_object.hashtag_prefix %></p>
        </div>

        <div class="row">
          <p class="col1 pull_left title">From:</p>
          <p class="col2 pull_left"><%= @message.from %></p>
        </div>

        <div class="row">
          <p class="col1 pull_left title">Message:</p>
          <p class="col6"><%= @message.body %></p>
        </div>

      </article>

      <aside class="col2 pull_right white_well">
        <% if @message.creator_user_id.blank? %>
            <%= link_to "Reply", "http://www.#{current_user.email.scan(/@(.*)/).to_s.gsub(']', '').gsub('[', '').gsub('"', '')}", :class => "btn btn_green row", :target => '_blank', :id => 'messageReplyButton' %>
        <% else %>
            <%= link_to "Reply", {:action => :reply, :id => @message.id_hash}, :class => "btn btn_green row", :id => 'messageReplyButton' %>
        <% end %>

        <%= link_to "Delete", {:action => :delete, :id => @message.id_hash, :method => :delete}, :confirm => 'Are you sure you want to delete this message?', :class => "btn btn_red row" %>
      </aside>

  <% end %>
</div>
