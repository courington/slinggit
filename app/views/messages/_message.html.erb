<div class="row">
    <div class="col6 pull_left">
      <p><%= link_to(message.body.to_ellipsis(200), {:action => :show, :id => message.id_hash}, :class => message.status == STATUS_UNREAD ? 'messageUnread' : 'messageRead') %></p>
      <small class="timestamp">Received <%= time_ago_in_words(message.created_at) %> ago.</small>
      <%= link_to "delete", {:action => :delete, :id => message.id_hash, :method => :delete}, :confirm => 'Are you sure you want to delete this message?' %>
    </div>
</div>
<br/>