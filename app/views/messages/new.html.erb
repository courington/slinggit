<% provide(:title, "New Message") %>
<div class="wrapper messages">
  <article>
    <% if @post %>
        <%= render 'posts/post_details' %>
    <% end %>
    <%= form_for(@message) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <% if not signed_in? %>
            <div class="row">
              <div class="col6 pull_left">
                <%= f.label :contact_info_json, "Email", for: "message_contact_info_json", class: "col6" %>
                <br/>
                <%= f.text_field :contact_info_json, :value => @email_entered, :type => :email, :placeholder => "Email Address" %>
              </div>
            </div>
            <br/>
        <% end %>
        <div class="row">
          <div class="col6 pull_left">
            <%= f.label :body, "Message", for: "messag_body", class: "col6" %>
            <br/>
            <%= f.text_area :body, "maxLength" => 1000, :value => @message_entered, :counterMax => 1000 %>
          </div>
        </div>
        <br/>
        <%= submit_tag 'Send Message', class: "btn btn_green" do %>
            <%= f.submit 'Send Message', class: "btn btn_green" %>
        <% end %>
    <% end %>
  </article>
</div>