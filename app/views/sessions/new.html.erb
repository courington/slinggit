<% provide(:title, "Sign in") %>

<section class="wrapper page_col singleWide">
	<header>
		<h1>Sign in</h1>
		<p>Sign in</p>
	</header>

	<%= form_for(:session, url: sessions_path) do |f| %>
		<fieldset class="page_col twoCol">
			<%= f.label :email, class: "control-label", for: "session_email" %>
      <%= f.text_field :email, class: "input-xlarge" %>
      <%= f.label :password, class: "control-label", for: "session_password" %>
      <%= f.password_field :password, class: "input-xlarge" %>
		</fieldset>   
		<%= f.button "Sign in", class: "btn_large" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>

</section>