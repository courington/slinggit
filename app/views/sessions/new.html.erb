<% provide(:title, "Sign in") %>

<section id="newSessionWrapper" class="wrapper wrapper_newSession">

  <header class="row">
    <h1>Sign in</h1>
    <p>Sign in</p>
  </header>

  <div class ="row">
  	<div class="col3 white_well">
    <%= form_for(:session, url: sessions_path) do |f| %>

        <fieldset class="row form_initialFields">
          <%= f.label :email, for: "session_email", class: "col6" %>
          <%= f.email_field :email, class: "col6", :value => @email || params[:email], placeholder: "Email" %>
        </fieldset>

        <fieldset class="row form_initialFields">
          <%= f.label :password, for: "session_password", class: "col6" %>
          <%= f.password_field :password, class: "col6", placeholder: "Password" %>
        </fieldset>

        <fieldset class="row form_initialFields">
          <%= f.button "Sign in", class: "col2 btn_green pull_right" %>
          <%= link_to "Forgot your password?", {:controller => :users, :action => :password_reset}, class: "col4 pull_left", :id => 'forgot_password' %>
        </fieldset>

    	<% end %>
  	</div>
  </div>

  <div id="orSignupActions" class="row">
    
    <p>New Users |  <%= link_to "Sign Up!", signup_path %></p>
  </div>

</section>

<script type="text/javascript">
    $(document).ready(function () {
        <% if not params[:email].blank? %>
        $('#session_password').focus();
        <% end %>
    });
</script>
